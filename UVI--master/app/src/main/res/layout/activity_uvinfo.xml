<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/linear1"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toTopOf="@id/constraint1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="자외선 정보"
                        android:textAlignment="center"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="UVI"
                        android:textAlignment="viewStart"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/uvi"
                        android:layout_width="227dp"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/line4"
                        android:fontFamily="@font/nanum_gothic"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="1.5950"
                        android:textAlignment="textEnd"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="EUV"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/euv"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line4"
                        android:fontFamily="@font/nanum_gothic"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="0.0530"
                        android:textAlignment="textEnd"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="EUVB"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/euvb"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line4"
                        android:fontFamily="@font/nanum_gothic"
                        android:inputType="textPersonName"
                        android:padding="10dp"
                        android:text="0.0242"
                        android:textAlignment="textEnd"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/vitb"
                        android:layout_width="match_parent"
                        android:layout_height="130dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="예상 비타민D 합성량\n - 사용자설정(15분)기준 \n\t 85.75IU 합성"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:id="@+id/ery"
                        android:layout_width="match_parent"
                        android:layout_height="101dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="홍반 발생여부\n - 미발생"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

            </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linear2"
            app:layout_constraintEnd_toEndOf="@id/constraint1"
            app:layout_constraintStart_toStartOf="@id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/table1"/>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/linear3"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/linear1">

            <Button
                android:id="@+id/go_home2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line3"
                android:text="홈으로"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/constraint1"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/linear2">


        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>