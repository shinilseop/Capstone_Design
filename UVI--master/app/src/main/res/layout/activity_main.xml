<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/linear1"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toTopOf="@id/constraint1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="위치"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/gpsText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/line2"
                        android:fontFamily="@font/nanum_gothic"
                        android:gravity="left"
                        android:padding="10dp"
                        android:text="위도 : 0.0°\n경도 : 0.0°"
                        android:textColor="#d3d3d3"
                        android:textSize="17dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="조도"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/illumText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/line2"
                        android:fontFamily="@font/nanum_gothic"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="0 lx"
                        android:textColor="#FFE400"
                        android:textSize="26dp" />
                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="태양천정각"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/solarZenithText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/line2"
                        android:fontFamily="@font/nanum_gothic"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="0.0°"
                        android:textColor="#FFBB00"
                        android:textSize="26dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="자외선지수"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                    <TextView
                        android:id="@+id/uviText"
                        android:layout_width="match_parent"
                        android:layout_height="70dp"
                        android:background="@drawable/line2"
                        android:fontFamily="@font/nanum_gothic"
                        android:gravity="right"
                        android:padding="10dp"
                        android:text="null"
                        android:textColor="#3ea72d"
                        android:textSize="26dp" />
                </LinearLayout>
            </TableRow>

        </TableLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linear2"
            app:layout_constraintEnd_toEndOf="@id/constraint1"
            app:layout_constraintStart_toStartOf="@id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/table1">

            <Button
                android:id="@+id/illumButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/line3"
                android:fontFamily="@font/nanum_gothic"
                android:text="조도 측정"
                android:textColor="#d3d3d3"
                android:textSize="20dp" />

            <Button
                android:id="@+id/setupButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/line3"
                android:fontFamily="@font/nanum_gothic"
                android:text="UVI 측정"
                android:textColor="#d3d3d3"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/linear3"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/linear1">

            <TextView
                android:id="@+id/notice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line"
                android:fontFamily="@font/nanum_gothic"
                android:padding="10dp"
                android:text="자외선지수 단계 : "
                android:textColor="#d3d3d3"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/noticeText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/line2"
                android:fontFamily="@font/nanum_gothic"
                android:gravity="left"
                android:padding="10dp"
                android:text="측정하기를 눌러주세요\n"
                android:textColor="#ffffff"
                android:textSize="19dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/constraint1"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/linear2">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/uvi_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line3"
                        android:text="자외선정보 더보기" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <Button
                        android:id="@+id/user_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/line3"
                        android:text="사용자 환경설정" />
                </LinearLayout>
            </TableRow>
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>