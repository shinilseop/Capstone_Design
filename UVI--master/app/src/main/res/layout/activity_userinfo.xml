<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#121212"
    tools:context=".MainActivity"
    tools:ignore="MissingDefaultResource">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:id="@+id/table1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintBottom_toTopOf="@+id/linear1"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toTopOf="@id/constraint1">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="사용자 정보설정"
                        android:textAlignment="center"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="나이"
                        android:textAlignment="viewStart"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <EditText
                        android:id="@+id/Age"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line4"
                        android:fontFamily="@font/nanum_gothic"
                        android:inputType="number"
                        android:padding="10dp"
                        android:text="24"
                        android:textAlignment="textEnd"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="노출면적"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <EditText
                        android:id="@+id/PBE"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line4"
                        android:fontFamily="@font/nanum_gothic"
                        android:inputType="number"
                        android:padding="10dp"
                        android:text="0.15"
                        android:textAlignment="textEnd"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow>
            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line3"
                        android:fontFamily="@font/nanum_gothic"
                        android:padding="10dp"
                        android:text="피부타입"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:padding="4dp">

                    <EditText
                        android:id="@+id/STF"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:layout_gravity="center"
                        android:background="@drawable/line4"
                        android:fontFamily="@font/nanum_gothic"
                        android:inputType="number"
                        android:padding="10dp"
                        android:text="2"
                        android:textAlignment="textEnd"
                        android:textColor="#d3d3d3"
                        android:textSize="20dp" />

                </LinearLayout>
            </TableRow> <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/line3"
                    android:fontFamily="@font/nanum_gothic"
                    android:padding="10dp"
                    android:text="노출시간(분)"
                    android:textColor="#d3d3d3"
                    android:textSize="20dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="4dp">

                <EditText
                    android:id="@+id/Time"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/line4"
                    android:fontFamily="@font/nanum_gothic"
                    android:inputType="number"
                    android:padding="10dp"
                    android:text="15"
                    android:textAlignment="textEnd"
                    android:textColor="#d3d3d3"
                    android:textSize="20dp" />

            </LinearLayout>
        </TableRow>
        </TableLayout>

        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@+id/linear2"
            app:layout_constraintEnd_toEndOf="@id/constraint1"
            app:layout_constraintStart_toStartOf="@id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/table1"/>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toTopOf="@id/linear3"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/linear1">

            <Button
                android:id="@+id/go_home1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:layout_weight="1"
                android:background="@drawable/line3"
                android:fontFamily="@font/nanum_gothic"
                android:text="홈으로"
                android:textColor="#d3d3d3"
                android:textSize="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/constraint1"
            app:layout_constraintEnd_toEndOf="@+id/constraint1"
            app:layout_constraintStart_toStartOf="@+id/constraint1"
            app:layout_constraintTop_toBottomOf="@+id/linear2">


            <LinearLayout
                android:id="@+id/linear4"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/linear2"
                app:layout_constraintEnd_toEndOf="@id/constraint1"
                app:layout_constraintStart_toStartOf="@id/constraint1"
                app:layout_constraintTop_toBottomOf="@+id/table1" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>